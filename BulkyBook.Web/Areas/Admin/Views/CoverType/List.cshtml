@model IEnumerable<CoverType>;
@using System.Reflection;
@using System.ComponentModel;

@{
    ViewData["Title"] = "Cover Type List";
}

<a asp-action="Create">Create Cover Type</a>
<table>
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
        </tr>
    </thead>
    <tbody>
    @foreach (var coverType in Model)
    {
        <tr>
            <td>
                @coverType.Id
            </td>
            <td>
                @coverType.Name
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@coverType.Id">Edit</a>
            </td>
            <td>
                <form method="post" asp-action="Delete" asp-route-id="@coverType.Id">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
